{
  "name": "@heise/embetty",
  "version": "4.0.0-beta.2",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "prebuild": "yarn clean",
    "build": "webpack -p",
    "prebuild:npm": "yarn clean",
    "build:npm": "tsc --build tsconfig.build.json",
    "postbuild:npm": "yarn copy:sass",
    "clean": "rimraf dist",
    "build:gh-pages": "./gh-pages.js",
    "deploy:gh-pages": "yarn build:gh-pages && gh-pages -d .gh-pages",
    "dev": "./dev-server.js",
    "copy:sass": "cpy 'lib/**/*.scss' 'dist' --parents",
    "test": "jest",
    "lint": "eslint . --cache --ext .ts,.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,html,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": {
    "name": "Philipp Busse",
    "email": "pmb@heise.de"
  },
  "contributors": [
    {
      "name": "Jan Hofmann",
      "email": "jah@heise.de"
    },
    {
      "name": "Alexander Pluhar",
      "email": "apl@heise.de"
    }
  ],
  "engines": {
    "yarn": ">=1.3.2 <2.0.0",
    "node": ">=10"
  },
  "bugs": "https://github.com/heiseonline/embetty/issues",
  "homepage": "https://github.com/heiseonline/embetty",
  "repository": {
    "type": "git",
    "url": "https://github.com/heiseonline/embetty"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "core-js": "3",
    "hogan.js": "^3.0.2",
    "intersection-observer": "^0.9.0",
    "regenerator-runtime": "^0.13.3",
    "url-join": "^4.0.1",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@heise/embetty-server": "^2.0.3",
    "@heise/eslint-config": "^10.0.0",
    "@types/fs-extra": "^8.1.0",
    "@types/hogan.js": "^3.0.0",
    "@types/jest": "^25.2.1",
    "@types/url-join": "^4.0.0",
    "@typescript-eslint/parser": "^2.28.0",
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "autoprefixer": "^9.7.5",
    "cache-loader": "^4.0.0",
    "cpy-cli": "^3.1.0",
    "css-loader": "^3.3.0",
    "eslint": "^6.5.1",
    "file-loader": "^6.0.0",
    "fs-extra": "^9.0.0",
    "gh-pages": "^2.0.1",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "lint-staged": "^10.0.8",
    "node-sass": "^4.7.2",
    "postcss-loader": "^3.0.0",
    "raw-loader": "^4.0.0",
    "sass-loader": "^8.0.0",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.0.3",
    "webpack-dev-server": "^3.10.3"
  }
}
